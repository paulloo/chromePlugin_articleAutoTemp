{
  "name": "quick_countdown",
  "displayName": "quick countdown",
  "version": "0.0.1",
  "description": "A quick countdown extension.",
  "author": "paulloo",
  "scripts": {
    "dev": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/selector": "^0.0.5",
    "@plasmohq/storage": "^1.11.0",
    "axios": "^1.7.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.11",
    "flowbite": "^2.5.1",
    "flowbite-react": "^0.10.1",
    "handlebars": "^4.7.8",
    "next": "^14.2.4",
    "plasmo": "0.84.0",
    "radash": "^12.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "externally_connectable": {
      "matches": [
        "*://*.localhost/*",
        "https://mp.weixin.qq.com/*"
      ]
    },
    "permissions": [
      "downloads",
      "scripting",
      "tabs",
      "storage",
      "contextMenus",
      "activeTab"
    ],
    "file_system_provider_capabilities": {
      "source": "network"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
      "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'"
    },
    "web_accessible_resources": [
      {
        "matches": [
          "https://mp.weixin.qq.com/*",
          "http://mp.weixin.qq.com/*",
          "<all_urls>"
        ],
        "resources": [
          "assets/icon.png",
          "assets/img/*.jpg",
          "assets/img/*.svg",
          "assets/sound/*.mp3",
          "resources/test.json",
          "templates/*.hbs",
          "templates/*.tsx",
          "templates/articles/*.json",
          "sandboxes/*.ts",
          "sandboxes/*.js",
          "sandboxes/mpWixin.js",
          "sandboxes/mpWixin.ts",
          "node_modules/handlebars/dist/*.js"
        ]
      }
    ],
    "background": {
      "service_worker": "core/worker.ts"
    }
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "lmdb",
      "msgpackr-extract"
    ],
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
